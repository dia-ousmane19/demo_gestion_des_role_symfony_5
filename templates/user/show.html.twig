{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h3 class="text-center">L'utilisateur</h3>
		<a href="{{ path('user_index') }}">
			<i class='fas fa-long-arrow-alt-left'></i>Retour a la liste</a><span class="m-2"></span>
		<a href="{{ path('user_edit', {'id': user.id}) }}">
			<i class="fas fa-user-edit"></i>
		</a>

		<table class="table table-striped mt-4">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>

			</tbody>
		</table>


		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
